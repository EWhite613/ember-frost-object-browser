{{! Template for the frost-action-bar component }}
<div class='{{css}}-selections'>
  {{selectedItemsLabel}}
</div>
<div class='{{css}}-loading'>
  {{#if isLoading}}
    {{frost-loading
      hook=(concat hookPrefix '-loading')
      type='ring'
    }}
    <div class='loading-text'>{{loadingText}}</div>
  {{/if}}
</div>
<div class='{{css}}-buttons' data-test={{hook 'frost-action-bar-buttons'}}>
  {{#if _moreActions.length}}
    {{#frost-button
      hook='moreActions'
      priority='secondary'
      size='medium'
      text=moreActionsText
    }}
      {{#frost-popover
        classNames='more-actions-popover'
        closest=true
        position='top'
        target='.frost-button'
      }}
        <ul>
          {{#each _moreActions as |action|}}
            {{#if action.disabled}}
              <li
                class='disabled'
                data-test={{hook action.hook}}
                role='button'
              >
                {{action.text}}
              </li>
            {{else}}
              <li
                data-test={{hook action.hook}}
                onClick={{action.onClick}}
                role='button'
              >
                {{action.text}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
      {{/frost-popover}}
    {{/frost-button}}
  {{/if}}
  {{#each _controls as |control|}}
    {{component control}}
  {{/each}}
</div>
